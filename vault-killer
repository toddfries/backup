echo "Checking to be sure backups are stopped"

kills=0
while :; do
	# if vault-backup is running, it might spawn more ssh sessions
	set -A pids $(pgrep -u _backup -f "(ksh .*/vault-backup|ssh)")
	if [ ${#pids[*]} -eq 0 ]; then
		break
	fi
	# only kill ssh sessions so vault-backup can finish gracefully
	if [ "$(pgrep -u _backup ssh)" ]; then
		pkill -u _backup ssh
		sleep .2
		let kills=kills+1
	else
		sleep .5
	fi
done
echo executed $kills times
